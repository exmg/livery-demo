{
  "name": "@exmg/livery-demo",
  "version": "0.0.0",
  "description": "Demo use of Ex Machina Group Livery Web SDK (@exmg/livery).",
  "author": "Ex Machina Group",
  "homepage": "https://demo.liveryvideo.com/",
  "license": "MIT",
  "repository": "github:exmg/livery-demo",
  "scripts": {
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf build dist",
    "format:eslint": "eslint --ext .ts,.js,.html . --fix",
    "format:markdown": "markdownlint README.md --fix",
    "format:prettier": "prettier \"**/*.{ts,js,json,html}\" --write",
    "format": "npm run format:eslint && npm run format:prettier && npm run format:markdown",
    "lint:eslint": "eslint --ext .ts,.js,.html .",
    "lint:markdown": "markdownlint README.md",
    "lint:prettier": "prettier \"**/*.{ts,js,json,html}\" --check",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:markdown",
    "start:build": "cd dist && es-dev-server --open",
    "start": "es-dev-server --preserve-symlinks --node-resolve --open --watch",
    "test:bs": "karma start karma.bs.config.js --coverage",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test": "karma start --coverage",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@exmg/livery": "^5.4.0",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.22.9",
    "@open-wc/eslint-config": "^2.0.4",
    "@open-wc/testing": "^2.5.8",
    "@open-wc/testing-karma": "^3.3.8",
    "@open-wc/testing-karma-bs": "^1.3.52",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.45.2",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "markdownlint-cli": "^0.22.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-cpy": "^2.0.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "README.md": [
      "markdownlint --fix",
      "git add"
    ]
  }
}
